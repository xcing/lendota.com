			),
			'aevasites' => array(
				'title' => !isset($txt['aeva_sites']) ? 'Aeva Sites' : $txt['aeva_sites'],
				'href' => $scripturl . '?action=featuresettings;sa=aevasites;sesc=' . $context['session_id'],
			),
]]></add>
		</operation>
		<operation>
			<search position="end" />
			<add><![CDATA[

